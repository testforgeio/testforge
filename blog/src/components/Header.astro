---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="bg-white shadow-md px-4">
	<nav class="grid grid-cols-3 items-center justify-items-center">
		<h2 class="text-current text-xl m-0"><a href="/">{SITE_TITLE}</a></h2>
		<div>
			<HeaderLink href="/" class="py-4 px-2 text-black border-b-4 border-transparent hover:text-gray-700">
				Home
			</HeaderLink>
			<HeaderLink href="/blog" class="py-4 px-2 text-black border-b-4 border-transparent hover:text-gray-700">
				Blog
			</HeaderLink>
			<a class="active">
				123
			</a>
		</div>
	</nav>
</header>
<style>
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
	}
	nav a.active {
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
